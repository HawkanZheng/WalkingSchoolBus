<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="project.cmpt276.androidui.walkingschoolbus.WhoIMonitor"
    tools:layout_editor_absoluteY="81dp">

    <TextView
        android:id="@+id/currentMonitoringView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="5dp"
        android:layout_marginTop="16dp"
        android:text="@string/currently_monitoring"
        app:layout_constraintEnd_toStartOf="@+id/toDeleteView"
        app:layout_constraintTop_toTopOf="parent" />

    <ListView
        android:id="@+id/currentlyMonitoringList"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="43dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="38dp"
        app:layout_constraintBottom_toTopOf="@+id/addSomoneToMonitorView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/currentMonitoringView" />

    <EditText
        android:id="@+id/addSomeoneToMonitorEdit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="@string/user_s_email"
        android:inputType="textEmailAddress"
        app:layout_constraintStart_toStartOf="@+id/addSomoneToMonitorView"
        app:layout_constraintTop_toBottomOf="@+id/addSomoneToMonitorView" />

    <TextView
        android:id="@+id/addSomoneToMonitorView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="143dp"
        android:layout_marginStart="16dp"
        android:text="@string/add_a_user_to_monitor"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/addUserToMonitorBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/add"
        app:layout_constraintBaseline_toBaselineOf="@+id/addSomeoneToMonitorEdit"
        app:layout_constraintStart_toEndOf="@+id/addSomeoneToMonitorEdit" />

    <TextView
        android:id="@+id/toDeleteView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:text="@string/long_press_user_to_stop_monitoring"
        app:layout_constraintBottom_toTopOf="@+id/currentlyMonitoringList"
        app:layout_constraintEnd_toEndOf="@+id/currentlyMonitoringList" />

    <Button
        android:id="@+id/returnMainMenuBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:layout_marginStart="8dp"
        android:text="Return to Main Menu"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
</android.support.constraint.ConstraintLayout>
